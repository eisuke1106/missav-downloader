{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "isort.path": [
        "${workspaceFolder}",
        ".venv",
        "bin",
        "isort"
    ],
    "isort.args": [
        "--profile",
        "black"
    ]
}